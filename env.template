# Omnipair Indexer Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string with TimescaleDB
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://omnipair_user:your_secure_password@localhost:5432/omnipair_indexer

# =============================================================================
# Solana RPC Configuration
# =============================================================================
# Mainnet RPC endpoint (default Solana RPC)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# WebSocket endpoint for real-time monitoring
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# For better performance, consider using dedicated RPC providers:
# SOLANA_RPC_URL=https://your-dedicated-rpc-endpoint.com
# SOLANA_WS_URL=wss://your-dedicated-ws-endpoint.com

# =============================================================================
# Application Configuration
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=production

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Server port
PORT=3000

# =============================================================================
# Omnipair Protocol Configuration
# =============================================================================
# Omnipair program ID (from the Rust program)
OMNIPAIR_PROGRAM_ID=3tJrAXnjofAw8oskbMaSo9oMAYuzdBgVbW3TvQLdMEBd

# =============================================================================
# Performance Configuration
# =============================================================================
# Maximum concurrent RPC requests
MAX_CONCURRENT_REQUESTS=10

# Batch size for backfill operations
BACKFILL_BATCH_SIZE=1000

# Delay between RPC requests (milliseconds)
RPC_DELAY_MS=100

# =============================================================================
# Monitoring & Alerting
# =============================================================================
# Telegram bot token for notifications (optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram chat ID for notifications (optional)
TELEGRAM_CHAT_ID=your_chat_id_here

# Health check interval (milliseconds)
HEALTH_CHECK_INTERVAL=60000

# =============================================================================
# Feature Flags
# =============================================================================
# Enable real-time monitoring
ENABLE_REAL_TIME_MONITORING=true

# Enable gap filling
ENABLE_GAP_FILLING=true

# Enable market state snapshots
ENABLE_MARKET_SNAPSHOTS=true

# Enable price feed updates
ENABLE_PRICE_FEED_UPDATES=true

# Enable user position tracking
ENABLE_USER_POSITION_TRACKING=true

# Enable liquidation tracking
ENABLE_LIQUIDATION_TRACKING=true

