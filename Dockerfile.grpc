# Multi-stage build for Omnipair gRPC Server
# Optimized for Railway deployment

# Stage 1: Build stage
FROM rustlang/rust:nightly-bookworm as builder

# Install system dependencies for building Rust crates
RUN apt-get update && apt-get install -y \
  build-essential \
  pkg-config \
  libssl-dev \
  libpq-dev \
  perl \
  ca-certificates \
  protobuf-compiler \
  && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy all necessary files for the build
COPY . ./

# Set environment variables to use system OpenSSL
ENV OPENSSL_NO_VENDOR=1
ENV PKG_CONFIG_ALLOW_CROSS=1
ENV CARGO_REGISTRIES_CRATES_IO_PROTOCOL=sparse

# Build the gRPC server binary in release mode
RUN cargo build --release --bin omnipair-grpc-server

# Stage 2: Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
  ca-certificates \
  libssl3 \
  libpq5 \
  libc6 \
  && rm -rf /var/lib/apt/lists/* \
  && apt-get clean

# Create a non-root user
RUN useradd -m -u 1001 grpc

# Set working directory
WORKDIR /app

# Copy the binary from builder stage
COPY --from=builder /app/target/release/omnipair-grpc-server /app/omnipair-grpc-server

# Change ownership to the grpc user
RUN chown -R grpc:grpc /app

# Switch to non-root user
USER grpc

# Expose gRPC port
EXPOSE 50051

# Set default environment variables
ENV RUST_LOG=info
ENV RUST_BACKTRACE=1
ENV GRPC_PORT=50051
ENV NODE_ENV=production

# Start the gRPC server
ENTRYPOINT ["./omnipair-grpc-server"]
